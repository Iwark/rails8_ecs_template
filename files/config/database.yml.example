default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

development:
  <<: *default
  url: <%= ENV['DATABASE_URL'] %>

test:
  <<: *default
  url: <%= 
    base_url = ENV['TEST_DATABASE_URL']
    test_env_number = ENV['TEST_ENV_NUMBER']
    if base_url && test_env_number
      uri = URI.parse(base_url)
      # Insert TEST_ENV_NUMBER into the database name
      uri.path = uri.path + test_env_number
      uri.to_s
    else
      base_url
    end
  %>

production:
  <<: *default
  pool: <%= ENV.fetch("DB_POOL") { 20 } %>
  primary:
    url: <%= ENV['DATABASE_URL'] %>
  primary_replica:
    url: <%= ENV['READER_DATABASE_URL'] %>
    replica: true

staging:
  <<: *default
  pool: <%= ENV.fetch("DB_POOL") { 10 } %>
  primary:
    url: <%= ENV['DATABASE_URL'] %>
  primary_replica:
    url: <%= ENV['READER_DATABASE_URL'] %>
    replica: true
